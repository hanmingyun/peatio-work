<% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">
    $(window).load(function(){
      $.ajax({
        type: "post",
        url: "<%= gen_address_funds_path %>"
      })
    });
  </script>
<% end %>
<script type="text/javascript" charset="utf-8">
    $(window).load(function(){
      <%if params[:data] == 'deposits'%>
        console.log('deposits')
        $('#withdraws').parent().removeClass('active');
        $('#deposits').parent().addClass('active');
        // $('#deposits').click();
        window.location = "/funds#/deposits/btc"
      <%elsif params[:data] == 'withdraws' %>
      console.log('withdraw')
      $('#deposits').parent().removeClass('active');
      $('#withdraws').parent().addClass('active');
        // $('#withdraw').click();
        window.location = "/funds#/withdraws/btc"
      <% end %>
    });
  </script>