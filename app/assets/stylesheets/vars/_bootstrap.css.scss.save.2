/* bootstrap vars
-------------------------------------------------------------- */
$grid-columns: 24;
$grid-gutter-width: 10px;


$body-bg: #24292e;

background: #0f0c29;  /* fallback for old browsers */
background: -webkit-linear-gradient(to bottom, #24243e, #302b63, #0f0c29);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to bottom, #24243e, #302b63, #0f0c29); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */



$brand-primary: #66CC00;

$up-text: rgb(77, 215, 16);
$down-text: rgb(77, 215, 16);

$navbar-default-bg: $brand-primary;
$navbar-default-link-color: #DCDCDC;
$navbar-default-link-hover-color: #EFEFEF;
$navbar-default-link-active-color: #EFEFEF;

$btn-default-bg: #428bca;
$btn-default-color: #fff;

$btn-info-bg: #fff;
$btn-info-color: #333;

$font-family-sans-serif: 'Helvetica Neue', Arial, 'Hiragino Sans GB', sans-serif;
